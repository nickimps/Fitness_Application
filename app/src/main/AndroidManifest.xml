<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessApplication"
        tools:targetApi="31">
        <activity
            android:name=".UpdateParametersActivity"
            android:exported="false" />
        <activity
            android:name=".RecordYourMealActivity"
            android:exported="false" />
        <activity
            android:name=".RecordWeightActivity"
            android:exported="false" />
        <activity
            android:name=".CreateWorkoutActivity"
            android:exported="false" />
        <activity
            android:name=".CalorieCounterActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseWorkoutsActivity"
            android:exported="false" />
        <activity
            android:name=".WorkoutsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>