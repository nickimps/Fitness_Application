<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choose_sets_exercise_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/background_grey">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/background_light_grey"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/workout_name_card"
                android:layout_width="247dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/dm_sans"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/workout_name"
                android:textAlignment="gravity"
                android:textColor="@color/text_yellow"
                android:textSize="25sp" />

            <NumberPicker
                android:id="@+id/repsNumberPicker"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerCustomText"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="@string/reps"
                android:textSize="25sp"
                android:fontFamily="@font/dm_sans"
                android:padding="3dp"
                android:gravity="center_horizontal|center_vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>