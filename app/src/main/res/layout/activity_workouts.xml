<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:padding="15dp"
    tools:context=".WorkoutsActivity">

    <TextView
        android:id="@+id/chooseWorkoutHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:elevation="10dp"
        android:text="@string/chooseWorkouts"
        android:fontFamily="@font/dm_sans"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="15"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textColor="@color/text_yellow"
        android:textSize="35sp"
        android:background="@drawable/header_banner"/>

    <!-- Chest Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chestCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_below="@id/chooseWorkoutHeaderTextView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chest"
            android:id="@+id/chestImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chest"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <!-- Shoulders Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/shouldersCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/chooseWorkoutHeaderTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shoulders"
            android:id="@+id/shouldersImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Shoulders"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <!-- Biceps Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bicepsCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_below="@id/chestCardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/biceps"
            android:id="@+id/bicepsImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Biceps"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <!-- Triceps Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tricepsCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/chestCardView"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/triceps"
            android:id="@+id/tricepsImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/dm_sans"
            android:gravity="center_vertical|center_horizontal"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="15"
            android:text="Triceps"
            android:textAlignment="gravity"
            android:textColor="@color/text_yellow"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Back Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/backCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_below="@id/tricepsCardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:id="@+id/backImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Back"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <!-- Abs Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/absCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tricepsCardView"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/abs"
            android:id="@+id/absImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Abs and Obliques"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <!-- Legs Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/legsCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_below="@id/backCardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/legs"
            android:id="@+id/legsImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Legs"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

    <!-- Bum Card View  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BumCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/backCardView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bum"
            android:id="@+id/bumImage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Glutes"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="gravity"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="15"
            android:shadowDx="5"
            android:shadowDy="5"
            android:textColor="@color/text_yellow"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>